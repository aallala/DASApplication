<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TimeFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="632dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="140sp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/abhaya_libre"
        android:paddingLeft="160sp"
        android:text="@string/time_slot"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="683dp"
                android:layout_height="128dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="170dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/teal_200"
                app:cardCornerRadius="5dp">


                <TextView
                    android:id="@+id/morning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70sp"
                    android:layout_marginTop="20sp"
                    android:text="Morning"
                    android:textSize="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="60dp"
                    android:background="@color/teal_200"
                    android:onClick="getTime"
                    app:cardCornerRadius="5dp"
                    tools:ignore="MissingConstraints,OnClick,UsingOnClickInXml">

                    <TextView
                        android:id="@+id/time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/abhaya_libre"
                        android:text="10:00 AM"
                        android:textColor="@color/teal_200"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="60dp"
                    android:background="@color/teal_200"
                    android:onClick="getChage"
                    tools:ignore="MissingConstraints,OnClick">

                    <TextView
                        android:id="@+id/time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/abhaya_libre"
                        android:text="10:30 AM"
                        android:textColor="@color/teal_200"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="360sp"
                    android:layout_marginTop="20sp"
                    android:src="@drawable/sun" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="400sp"
                    android:layout_marginTop="20sp"
                    android:text="Afternoon"
                    android:textSize="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="360dp"
                    android:layout_marginTop="60dp"
                    android:background="@color/teal_200"
                    android:onClick="getChage"
                    app:cardCornerRadius="5dp"
                    tools:ignore="MissingConstraints,OnClick">

                    <TextView
                        android:id="@+id/time3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/abhaya_libre"
                        android:text="12:00 PM"
                        android:textColor="@color/teal_200"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="470dp"
                    android:layout_marginTop="60dp"
                    android:background="@color/teal_200"
                    android:onClick="getChage"
                    app:cardCornerRadius="5dp"
                    tools:ignore="MissingConstraints,OnClick">

                    <TextView
                        android:id="@+id/time4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/abhaya_libre"
                        android:text="12:45 PM"
                        android:textColor="@color/teal_200"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card5"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="580dp"
                    android:layout_marginTop="60dp"
                    android:background="@color/teal_200"
                    android:onClick="getChage"
                    app:cardCornerRadius="5dp"
                    tools:ignore="MissingConstraints,OnClick">

                    <TextView
                        android:id="@+id/time5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/abhaya_libre"
                        android:text="01:00 PM"
                        android:textColor="@color/teal_200"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20sp"
                    android:src="@drawable/sunrise" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>