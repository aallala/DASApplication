<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="6dp"
    android:elevation="4dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/patient_booking_name"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:text="@string/patient_name"
                android:textSize="25sp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/displayname"
                android:layout_marginTop="40dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text=""
                android:textColor="@color/teal_200"/>
            <TextView
                android:id="@+id/patient_healthIssue"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:text="@string/health_issue"
                android:layout_marginTop="75dp"
                android:textSize="25sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/displayname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:text=""
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/teal_200"/>
            <TextView
                android:id="@+id/patient_mobileNo"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:text="@string/mobile_no"
                android:layout_marginTop="140dp"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/displayname2"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text=""
                android:layout_marginTop="180dp"
                android:textColor="@color/teal_200"/>

            <TextView
                android:id="@+id/patient_date"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:text="@string/date"
                android:textSize="25sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/bookedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="225dp"
                android:layout_marginLeft="70dp"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_200"/>

            <TextView
                android:id="@+id/patient_time"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="190dp"
                android:text="@string/time"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/bookedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="225dp"
                android:text=""
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/patient_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:text="@string/status"
                android:textSize="25sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/bookedStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:layout_marginLeft="90dp"
                android:text=""
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/teal_200"/>

            <Button
                android:id="@+id/changeStatus"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="320dp"
                android:onClick="changeButton"
                android:text="@string/change_status" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>