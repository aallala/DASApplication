<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    android:layout_marginLeft="20dp"
    android:elevation="4dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/doctor_image"
            android:layout_width="86dp"
            android:layout_height="87dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="51dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/display_doctor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="@string/demo"
            android:textColor="@color/teal_200"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/display_doctor_specilization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="35dp"
            android:text="@string/demo"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/display_doctor_experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            android:text="@string/demo"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/display_doctor_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="85dp"
            android:text="@string/date"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/doctorBooking"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="5dp"
            android:onClick="bookNow"
            android:text="@string/book_now" />

    </RelativeLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>